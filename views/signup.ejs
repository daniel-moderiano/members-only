<%- include('header')%>
  
  <section class="pt-3" >
    <div class="container" style="width: 28rem">
      <h1>Sign up</h1>
      <% include ./partials/messages %> 
      <form action="" method="POST" >
        <div class="form-group mt-4">
          <label for="fullName">Full name</label>
          <input type="text" required name="fullName" class="form-control" id="fullName" value="<%= locals.user ? locals.user.fullName : '' %>">
        </div>
        <div class="form-group mt-4">
          <label for="username">Username</label>
          <input type="email" required name="username" class="form-control" id="username" placeholder="Enter your email" value="<%= locals.user ? locals.user.username : '' %>">
        </div>
        <div class="form-group mt-4">
          <label for="password">Password</label>
          <input type="password" required name="password" class="form-control" id="password" value="<%= locals.user ? locals.user.password : '' %>">
        </div>
        <div class="form-group mt-4">
          <label for="confirmPassword">Confirm password</label>
          <input type="password" required name="confirmPassword" class="form-control" id="confirmPassword" value="<%= locals.user ? locals.user.confirmPassword : '' %>">
        </div>
        <div class="form-group mt-4">
          <label for="isAdmin" class="form-check-label">Enable admin rights</label>
          <input 
            type="checkbox" 
            name="isAdmin" 
            class="form-check-input" 
            id="isAdmin"
            <%= locals.user ? (locals.user.isAdmin && 'checked') : '' %>
          >
        </div>
        <button type="submit" class="btn btn-primary mt-4">Submit</button>
      </form>
    </div>
    
  </section>
  
<%- include('footer')%>
