<%- include('header')%>
  <section class="pt-3" >
    <div class="container" style="width: 28rem">
      <h1><%= title %></h1>
      <% include ./partials/messages %> 
      <form action="" method="POST" >
        <div class="form-group mt-4">
          <label for="username">Username</label>
          <input type="email" required name="username" class="form-control" id="username" placeholder="Enter your email" value="<%= locals.user ? locals.user.username : '' %>">
        </div>
        <div class="form-group mt-4">
          <label for="password">Password</label>
          <input type="password" required name="password" class="form-control" id="password" value="<%= locals.user ? locals.user.password : '' %>">
        </div>
        <button type="submit" class="btn btn-primary mt-4">Submit</button>
      </form>
    </div>
  </section>
  
<%- include('footer')%>
